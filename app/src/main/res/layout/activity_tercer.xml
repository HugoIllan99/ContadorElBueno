<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TercerActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tercera pantalla" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:background="#C1BDBD"
        android:text="Hugo Armando Illan Rojas"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#C1BDBD"
        android:text="Tecnologias de la Informacion"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:background="#C1BDBD"
        android:text="septimo semestre"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#C1BDBD"
        android:text="TÓPICOS SELECTOS DE TECNOLOGÍAS I"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="24sp" />

    <Button
        android:id="@+id/actividad_tres_boton_uno"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_weight="1"
        android:backgroundTint="#03A9F4"
        android:text="@string/actividad_tres_boton_uno" />

</LinearLayout>